<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="enterAnim">@anim/slide_in_right</item>
        <item name="exitAnim">@anim/slide_out_left</item>
        <item name="popEnterAnim">@anim/slide_out_left</item>
        <item name="popExitAnim">@anim/slide_out_left</item>
    </style>

    <style name="TitleText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/avenir_black</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="BodyText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#163973</item>
    </style>

    <style name="FilterHeader">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#163974</item>
    </style>



    <style name="SearchingTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="SmallText">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9E163973</item>
    </style>

    <style name="BlueButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
    </style>

</resources>